<div class="container flex h-screen">
<!-- Sidebar -->
  <aside class="w-1/5 bg-gray-800 text-white p-4">
    <%= render "sidebar", platforms: @platforms, genres: @genres %>
  </aside>
  <main class="w-4/5 bg-white p-6 overflow-auto">
    <div class="grid grid-cols-4 gap-4 mt-20" data-filters-target="results">
        <% @games.each do |game| %>
          <% unless game.offers.empty? %>
            <div class="card bg-base-200 w-85 border border-[#DC602E] shadow-sm h-[700px]">
              <figure class="px-10 pt-10 mt-5">
                <%= image_tag(game.artwork_url,
                  width: 400, height: 300, crop: :fill) %>
              </figure>
              <div class="card-body items-center text-center h-[420px]">
                <h2 class="card-title text-[#DC602E]"><%= game.title %></h2>
                <p class="overflow-y-scroll text-[#05A8AA]"><%= game.overview %></p>
                <p class="font-bold text-[#DC602E]"><%= game.platform %></p>
                <div class="card-actions">
                  <%= link_to game_path(game) do %>
                  <button class="btn btn-outline btn-warning">RÃ©server</button>
                <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </main>
</div>
