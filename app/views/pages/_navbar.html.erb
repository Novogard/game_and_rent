<div class="navbar bg-[#05A8AA] shadow-sm mb-5">
  <div class="flex-1">
    <%= link_to root_path do %>
      <button class="btn btn-ghost text-[#DC602E] text-xl font-bold">Games&Rent</button>
    <% end %>
  </div>
  <% if current_page?(controller: "games", action: "index") %>
      <div>
          <%= form_with url: games_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500",
              placeholder: "Search for a game to rent"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
  <div class="flex gap-2">
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <i class="fa-solid fa-circle-user text-white text-4xl"></i>
        </div>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
        <li>
        <%= link_to dashboard_path do%>
          <button class="justify-between">
            Profile
            <span class="badge">New</span>
          </button>
          <% end %>
        </li>
        <li><a>Settings</a></li>
        <li><a>Logout</a></li>
      </ul>
    </div>
  </div>
</div>
